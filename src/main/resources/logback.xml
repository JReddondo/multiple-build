<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender for execution log -->
    <!-- Note: The file appender is configured programmatically at runtime -->
    <!-- Format: [appPrefix_]multiple_build_execution_yyyy_MM_dd_HH_mm.log -->
    <!--
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>execution.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    -->

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- FILE appender is added programmatically -->
    </root>

    <!-- Debug level for application packages -->
    <logger name="com.github.jreddondo" level="INFO"/>

</configuration>

